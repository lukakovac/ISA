@using static ISA.Data.Constants;
@using static ISA.Data.Expressions;
@model IndexViewModel

@{
    ViewData["Title"] = "Manage your account";
}

@if (IsAnon(User))
{
    @Html.PartialAsync($"Partials/Index/Anon")
}
else
{
    foreach (var role in SYSTEM_ROLES)
    {
        if (User.IsInRole(role))
        {
            @await Html.PartialAsync($"Partials/Index/{role}")
        }
    }
}