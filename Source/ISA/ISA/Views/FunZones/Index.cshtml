@model IEnumerable<ISA.DataAccess.Models.FunZone>
@using static ISA.Data.Expressions;

@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Index</h2>

<p>
    <a asp-action="Create">Create New</a>
</p>
<table class="table">
    <thead>
        <tr>
            <td>
                Name:
            </td>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @if (item.Cinema != null)
                    {
                        @Html.DisplayFor(modelItem => item.Cinema.Name)
                    }
                    else
                    {
                        @Html.DisplayFor(modelItem => item.Theater.Name)
                    }
                </td>
                <td>
                    @if (IsFunZoneAdmin(User))
                    {
                        <a asp-action="Edit" asp-route-id="@item.Id">Edit | </a>
                        <a asp-action="Delete" asp-route-id="@item.Id">Delete | </a>
                    }
                    <a asp-action="Details" asp-route-id="@item.Id">Visit</a>
                </td>
            </tr>
        }
    </tbody>
</table>
